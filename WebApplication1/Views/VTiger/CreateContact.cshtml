@model WebApplication1.Models.VTigerContact

@{
    ViewData["Title"] = "Create Contact";
}

<h2>Create Contact</h2>

<form asp-action="CreateContact" method="post">
    <div class="form-group">
        <label asp-for="firstname">First Name:</label>
        <input asp-for="firstname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="lastname">Last Name:</label>
        <input asp-for="lastname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AssignedUserId">Assigned User ID:</label>
        <input asp-for="AssignedUserId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create Contact</button>
</form>